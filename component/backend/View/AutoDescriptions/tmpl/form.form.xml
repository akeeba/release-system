<form validate="true"
      cssfiles="media://com_ars/css/backend.css">
    <fieldset name="basic" label="LBL_ARS_AUTODESC_BASIC" class="span6">
        <field name="category" type="Model" label="LBL_AUTODESC_CATEGORY"
               model="Categories"
               key_field="id"
               value_field="title"
                />
        <field name="packname" type="Text" label="LBL_AUTODESC_PACKNAME" />
        <field name="title" type="Text" label="LBL_AUTODESC_TITLE" />
        <field name="environments" type="Model" label="LBL_ITEMS_ENVIRONMENTS"
               multiple="multiple"
               model="Environments"
               key_field="id"
               value_field="title"
                />
        <field name="published" type="Published" label="JPUBLISHED" />
    </fieldset>
    <fieldset name="descriptionset" label="LBL_AUTODESC_DESCRIPTION" class="span6">
        <field name="description" type="Editor" label_placement="none"
                />
    </fieldset>
</form>
