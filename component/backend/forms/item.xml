<form addfieldprefix="Akeeba\Component\ARS\Administrator\Field">
    <fieldset name="basic">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="release_id"
                type="ArsReleases"
                label="COM_ARS_ITEM_FIELD_RELEASE"
                required="true"
                cat_state_key="com_ars.items.filter.category_id"
        >
        </field>

        <field
                name="title"
                type="text"
                label="COM_ARS_ITEM_FIELD_TITLE"
                default=""
        />

        <field
                name="alias"
                type="text"
                label="COM_ARS_ITEM_FIELD_ALIAS"
                default=""
        />

        <field
                name="description"
                type="editor"
                label="COM_ARS_ITEM_FIELD_DESCRIPTION"
                filter="Joomla\CMS\Component\ComponentHelper::filterText"
        />

        <field
                name="type"
                type="list"
                label="COM_ARS_ITEM_FIELD_TYPE"
                required="true"
                default="link"
        >
            <option value="file">COM_ARS_ITEM_FIELD_TYPE_FILE</option>
            <option value="link">COM_ARS_ITEM_FIELD_TYPE_LINK</option>
        </field>

        <field
                name="filename"
                type="list"
                label="COM_ARS_ITEM_FIELD_FILE"
                showon="type:file"
        >
            <option value="">COM_ARS_ITEM_FIELD_FILENAME_SELECT</option>
        </field>

        <field
                name="url"
                type="url"
                label="COM_ARS_ITEM_FIELD_LINK"
                showon="type:link"
        />

        <field
                name="updatestream"
                type="ArsUpdateStreams"
                label="COM_ARS_ITEM_FIELD_UPDATESTREAM"
        >
            <option value="">COM_ARS_ITEM_FIELD_UPDATESTREAM_SELECT</option>
        </field>

        <field name="filesize"
               type="number"
               label="COM_ARS_ITEM_FIELD_FILESIZE"
               min="0"/>

        <field name="md5"
               type="text"
               label="COM_ARS_ITEM_FIELD_MD5"
        />

        <field name="sha1"
               type="text"
               label="COM_ARS_ITEM_FIELD_SHA1"
        />

        <field name="sha256"
               type="text"
               label="COM_ARS_ITEM_FIELD_SHA256"
        />

        <field name="sha384"
               type="text"
               label="COM_ARS_ITEM_FIELD_SHA384"
        />

        <field name="sha512"
               type="text"
               label="COM_ARS_ITEM_FIELD_SHA512"
        />

        <field
                name="show_unauth_links"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="COM_ARS_COMMON_SHOW_UNAUTH_LINKS"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="redirect_unauth"
                type="url"
                label="COM_ARS_COMMON_REDIRECT_UNAUTH"
                validate="url"
                showon="show_unauth_links:1"
        />

        <field
                name="environments"
                type="ArsEnvironments"
                label="COM_ARS_ITEM_FIELD_ENVIRONMENTS"
                multiple="true"
                layout="joomla.form.field.list-fancy-select"
                hint="COM_ARS_ITEM_FIELD_ENVIRONMENT_SELECT"
        >
        </field>

        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                filter="UINT"
                validate="options"
        />

        <field
                name="language"
                type="contentlanguage"
                label="JFIELD_LANGUAGE_LABEL"
                default="*"
        >
            <option value="*">JALL</option>
        </field>

        <field
                name="ordering"
                type="text"
                label="JFIELD_ORDERING_LABEL"
                size="6"
                default="0"
        />

        <field
                name="published"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="JENABLED"
                description="JFIELD_ENABLED_DESC"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="created"
                type="calendar"
                label="JGLOBAL_CREATED_DATE"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="checked_out"
                type="hidden"
                filter="unset"
        />

        <field
                name="checked_out_time"
                type="hidden"
                filter="unset"
        />

        <field
                name="hits"
                type="number"
                label="JGLOBAL_HITS"
                class="readonly"
                readonly="true"
                filter="unset"
        />

    </fieldset>
</form>