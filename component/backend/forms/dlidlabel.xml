<form addfieldprefix="Akeeba\Component\ARS\Administrator\Field">
    <fieldset name="basic">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="user_id"
                type="user"
                label="COM_ARS_DLIDLABELS_FIELD_USER_ID"
        />

        <field
                name="dlid"
                type="text"
                label="COM_ARS_DLIDLABELS_FIELD_DLID"
                description="COM_ARS_DLIDLABELS_FIELD_DLID_HELP"
                readonly="true"
                class="readonly"
        />

        <field
                name="primary"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="COM_ARS_DLIDLABELS_FIELD_PRIMARY_LABEL"
                default="0"
                validate="options"
                readonly="true"
                class="readonly"
        >
            <option value="0">COM_ARS_DLIDLABELS_FIELD_ADDON</option>
            <option value="1">COM_ARS_DLIDLABELS_FIELD_PRIMARY</option>
        </field>

        <field
                name="title"
                type="text"
                label="COM_ARS_ITEM_FIELD_TITLE"
                default=""
                required="true"
        />

        <field
                name="published"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="JENABLED"
                description="JFIELD_ENABLED_DESC"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="created"
                type="calendar"
                label="JGLOBAL_CREATED_DATE"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="checked_out"
                type="hidden"
                filter="unset"
        />

        <field
                name="checked_out_time"
                type="hidden"
                filter="unset"
        />
    </fieldset>
</form>