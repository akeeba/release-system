<form addfieldprefix="Akeeba\Component\ARS\Administrator\Field">
    <fieldset name="basic">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="title"
                type="text"
                label="COM_ARS_ENVIRONMENTS_TITLE"
                default=""
                required="true"
        />

        <field
                name="xmltitle"
                type="text"
                label="COM_ARS_ENVIRONMENT_XMLTITLE"
                default=""
                required="true"
        />

        <field
                name="created"
                type="calendar"
                label="JGLOBAL_CREATED_DATE"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="checked_out"
                type="hidden"
                filter="unset"
        />

        <field
                name="checked_out_time"
                type="hidden"
                filter="unset"
        />

    </fieldset>
</form>