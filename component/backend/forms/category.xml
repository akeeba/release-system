<form addfieldprefix="Akeeba\Component\ARS\Administrator\Field">
    <fieldset name="basic">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="title"
                type="text"
                label="COM_ARS_CATEGORIES_FIELD_TITLE"
                default=""
                required="true"
        />

        <field
                name="alias"
                type="text"
                label="COM_ARS_CATEGORIES_FIELD_ALIAS"
                default=""
                required="true"
        />

        <field
                name="description"
                type="editor"
                label="COM_ARS_CATEGORY_DESCRIPTION_LABEL"
                filter="Joomla\CMS\Component\ComponentHelper::filterText"
        />

        <field
                name="type"
                type="list"
                label="COM_ARS_CATEGORIES_FIELD_TYPE"
                default="normal"
                validate="options"
        >
            <option value="normal">COM_ARS_CATEGORIES_TYPE_NORMAL</option>
            <option value="bleedingedge">COM_ARS_CATEGORIES_TYPE_BLEEDINGEDGE</option>
        </field>

        <field
                name="directory"
                type="text"
                label="COM_ARS_CATEGORIES_FIELD_DIRECTORY"
                default="arsfiles"
                validate="filePath"
                exclude="administrator|api|bin|cache|cli|components|includes|language|layouts|libraries|media|modules|plugins|templates|tmp"
        />

        <field
                name="show_unauth_links"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="COM_ARS_COMMON_SHOW_UNAUTH_LINKS"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="redirect_unauth"
                type="url"
                label="COM_ARS_COMMON_REDIRECT_UNAUTH"
                validate="url"
                showon="show_unauth_links:1"
        />

        <field
                name="is_supported"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="COM_ARS_CATEGORIES_FIELD_IS_SUPPORTED"
                default="1"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                filter="UINT"
                validate="options"
        />

        <field
                name="language"
                type="contentlanguage"
                label="JFIELD_LANGUAGE_LABEL"
                default="*"
        >
            <option value="*">JALL</option>
        </field>

        <field
                name="ordering"
                type="text"
                label="JFIELD_ORDERING_LABEL"
                size="6"
                default="0"
        />

        <field
                name="published"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="JENABLED"
                description="JFIELD_ENABLED_DESC"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>


        <field
                name="created"
                type="calendar"
                label="JGLOBAL_CREATED_DATE"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="checked_out"
                type="hidden"
                filter="unset"
        />

        <field
                name="checked_out_time"
                type="hidden"
                filter="unset"
        />

    </fieldset>
    <fieldset name="permissions"
              label="JCONFIG_PERMISSIONS_LABEL"
              description="JCONFIG_PERMISSIONS_DESC"
    >
        <field
                name="asset_id"
                type="hidden"
                filter="unset"
        />
        <field name="rules"
               type="rules"
               label="JCONFIG_PERMISSIONS_LABEL"
               filter="rules"
               validate="rules"
               component="com_ars"
               section="category"
        />

    </fieldset>
</form>