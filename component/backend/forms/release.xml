<form addfieldprefix="Akeeba\Component\ARS\Administrator\Field">
    <fieldset name="basic">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="category_id"
                type="ArsCategories"
                label="COM_ARS_RELEASES_FIELD_CATEGORY"
                layout="joomla.form.field.list-fancy-select"
                required="true"
        >
        </field>

        <field
                name="version"
                type="text"
                label="COM_ARS_RELEASES_FIELD_VERSION"
                default=""
                required="true"
        />

        <field
                name="alias"
                type="text"
                label="COM_ARS_CATEGORIES_FIELD_ALIAS"
                default=""
                required="true"
        />

        <field
                name="maturity"
                type="list"
                label="COM_ARS_RELEASES_FIELD_MATURITY"
                required="true"
        >
            <option value="alpha">COM_ARS_RELEASES_MATURITY_ALPHA</option>
            <option value="beta">COM_ARS_RELEASES_MATURITY_BETA</option>
            <option value="rc">COM_ARS_RELEASES_MATURITY_RC</option>
            <option value="stable">COM_ARS_RELEASES_MATURITY_STABLE</option>
        </field>

        <field
                name="notes"
                type="editor"
                label="COM_ARS_RELEASE_NOTES_LABEL"
                filter="Joomla\CMS\Component\ComponentHelper::filterText"
        />

        <field
                name="show_unauth_links"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="COM_ARS_COMMON_SHOW_UNAUTH_LINKS"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="redirect_unauth"
                type="url"
                label="COM_ARS_COMMON_REDIRECT_UNAUTH"
                validate="url"
                showon="show_unauth_links:1"
        />


        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                filter="UINT"
                validate="options"
        />

        <field
                name="language"
                type="contentlanguage"
                label="JFIELD_LANGUAGE_LABEL"
                default="*"
        >
            <option value="*">JALL</option>
        </field>

        <field
                name="ordering"
                type="text"
                label="JFIELD_ORDERING_LABEL"
                size="6"
                default="0"
        />

        <field
                name="published"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="JENABLED"
                description="JFIELD_ENABLED_DESC"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="created"
                type="calendar"
                label="JGLOBAL_CREATED_DATE"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="checked_out"
                type="hidden"
                filter="unset"
        />

        <field
                name="checked_out_time"
                type="hidden"
                filter="unset"
        />

        <field
                name="hits"
                type="number"
                label="JGLOBAL_HITS"
                class="readonly"
                readonly="true"
                filter="unset"
        />

    </fieldset>
</form>