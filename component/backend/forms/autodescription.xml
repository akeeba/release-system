<form addfieldprefix="Akeeba\Component\ARS\Administrator\Field">
    <fieldset name="basic">
        <field
                name="id"
                type="number"
                label="JGLOBAL_FIELD_ID_LABEL"
                default="0"
                readonly="true"
                class="readonly"
        />

        <field
                name="category"
                type="ArsCategories"
                label="COM_ARS_AUTODESCRIPTION_FIELD_CATEGORY"
                layout="joomla.form.field.list-fancy-select"
                required="true"
        >
        </field>

        <field
                name="packname"
                type="text"
                label="COM_ARS_AUTODESCRIPTION_FIELD_PACKNAME"
                default=""
                required="true"
        />

        <field
                name="title"
                type="text"
                label="COM_ARS_AUTODESCRIPTION_FIELD_TITLE"
                default=""
                required="true"
        />

        <field
                name="access"
                type="accesslevel"
                label="JFIELD_ACCESS_LABEL"
                filter="UINT"
                validate="options"
        >
            <option></option>
        </field>

        <field
                name="show_unauth_links"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="COM_ARS_COMMON_SHOW_UNAUTH_LINKS"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="redirect_unauth"
                type="url"
                label="COM_ARS_COMMON_REDIRECT_UNAUTH"
                validate="url"
                showon="show_unauth_links:1"
        />

        <field
                name="description"
                type="editor"
                label="COM_ARS_AUTODESCRIPTION_FIELD_DESCRIPTION"
                filter="Joomla\CMS\Component\ComponentHelper::filterText"
        />

        <field
                name="environments"
                type="ArsEnvironments"
                label="COM_ARS_ITEM_FIELD_ENVIRONMENTS"
                multiple="true"
                layout="joomla.form.field.list-fancy-select"
                hint="COM_ARS_ITEM_FIELD_ENVIRONMENT_SELECT"
        >
        </field>

        <field
                name="published"
                type="list"
                layout="joomla.form.field.radio.switcher"
                label="JENABLED"
                description="JFIELD_ENABLED_DESC"
                default="0"
                validate="options"
        >
            <option value="0">JNO</option>
            <option value="1">JYES</option>
        </field>

        <field
                name="created"
                type="calendar"
                label="JGLOBAL_CREATED_DATE"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="created_by"
                type="user"
                label="JGLOBAL_FIELD_CREATED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="modified"
                type="calendar"
                label="JGLOBAL_FIELD_MODIFIED_LABEL"
                translateformat="true"
                showtime="true"
                size="22"
                filter="user_utc"
        />

        <field
                name="modified_by"
                type="user"
                label="JGLOBAL_FIELD_MODIFIED_BY_LABEL"
                validate="UserId"
        />

        <field
                name="checked_out"
                type="hidden"
                filter="unset"
        />

        <field
                name="checked_out_time"
                type="hidden"
                filter="unset"
        />

    </fieldset>
</form>
